###################################################
# Batch running of events  
###################################################

# verbosity
/tracking/verbose 0
/control/verbose 1
/run/verbose 2


# GPS Particle Generation
/gps/particle e-
/gps/pos/type Point
/gps/pos/centre 0 0 0
/gps/ang/type iso
/gps/energy 1 MeV


# Shoot along Z direction
/run/beamOn 1

exit
